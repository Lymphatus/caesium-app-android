<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="72dp"
    android:clickable="false"
    android:longClickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/listRelativeLayout">

    <!-- TODO Remove static text -->

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/listEntryLogoImageView"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/main_circle_shape"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatsapp"
        android:id="@+id/listEntryTitleTextView"
        android:textSize="16sp"
        android:textColor="@color/abc_primary_text_material_light"
        android:paddingLeft="72dp"
        android:layout_alignParentLeft="true"
        android:paddingTop="16dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listEntryCountTextView"
        android:textColor="@color/abc_secondary_text_material_light"
        android:gravity="center"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/listEntrySizeTextView"
        android:layout_toEndOf="@+id/listEntrySizeTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="765.77 Mb"
        android:id="@+id/listEntrySizeTextView"
        android:textSize="14sp"
        android:textColor="@color/abc_secondary_text_material_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="72dp"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/listEntryLogoInitialTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_marginLeft="16dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listEntryCheckBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingRight="16dp" />

</RelativeLayout>