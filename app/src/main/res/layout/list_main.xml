<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerCheckBox"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/headerTitleTextView"
        android:paddingTop="15dp"
        android:paddingLeft="60dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/textPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/headerCheckBox"
        android:layout_toStartOf="@+id/headerCheckBox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/headerSubtitleTextView"
        android:paddingLeft="60dp"
        android:paddingBottom="15dp"
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/headerCheckBox"
        android:layout_toStartOf="@+id/headerCheckBox"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerLogoImageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:background="@drawable/circle_shape"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/headerLogoTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:singleLine="true"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textColor="@color/white"/>
</RelativeLayout>